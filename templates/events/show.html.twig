{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}

    <nav class="navbar">
        <h1>EventEcho</h1>
    </nav>

    <h1>CREATE NEW EVENT</h1>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="info-card d-flex flex-row">
                    <img src="{{ event.image }}" class="info-img-left events-image" alt="Event Image">
                    <div class="info-body">
                        <h5 class="info-title"><strong>{{ event.name }}</strong></h5>
                        <p class="info-text"><strong>Date:</strong> {{ event.date ? event.date|date('Y-m-d H:i:s') : 'N/A' }}</p>
                        <p><strong>Type:</strong> {{ event.type }}</p>
                        <p class="info-text"><strong>Description:</strong> {{ event.description ?: 'N/A' }}</p>
                        <div class="text-center mt-5">
                            <a class="back-btn" href="{{ path('app_events_index') }}">BACK</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

{% endblock %}
